							<script type="text/javascript">
							function rsfp_runCondition1(){
							isChecked = rsfp_verifyChecked(3, 'services', 'Other');
							condition1 = isChecked == true;
							items = rsfp_getBlock(3, 'other');
							if (items) {
							if (condition1)
							rsfp_setDisplay(items, '');
							else
							rsfp_setDisplay(items, 'none');
							}
							}
							rsfp_runCondition1();
							rsfp_addCondition(3, 'services', rsfp_runCondition1);

							function rsfp_runAllConditions3(){
							rsfp_runCondition1();
							}
